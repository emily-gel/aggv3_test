containers {
    python_container = 'quay.io/mvforster/ep_py:latest'
    debian = 'debian:unstable-slim'
    bedtools = 'biocontainers/bedtools:v2.27.1dfsg-4-deb_cv1'
    bcftools = 'biocontainers/bcftools:v1.9-1-deb_cv1'
}

process {
    withName: LOCUSTOBED {
        container = containers.debian
    }
    withName: BEDTOSHARD {
        container = containers.bedtools
    }
    withName: SHARDTOVCF {
        container = containers.debian
    }
    withName: VCFTORESULT {
        container = containers.python_container
    }
    withName: GETINDEX {
        container = containers.debian
    }
}
