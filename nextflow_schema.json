{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "params": {
            "title": "Parameters",
            "type": "object",
            "required": ["locus", "shards", "samples"],
            "properties": {
                "locus": {
                  "type": "string",
                  "pattern": "^chr([1-9]|1[0-9]|2[0-2]|X|Y):\\d+-\\d+$",
                  "description": "The locus you want to query",
                  "default": "chr1:181049066-181049110"
              },
                "shards": {
                  "type": "string",
                  "description": "s3 location of the shards bed file",
                  "default": "s3://512426816668-gel-data-resources/dragen3.7.8/AggV3_resources/manifests/genomic_data/biallelic_shards.bed"
              },
                "samples": {
                  "type": "string",
                  "description": "s3 location of the samples file",
                  "default": "s3://512426816668-gel-data-resources/dragen3.7.8/AggV3_resources/samples/sample_list/2026-01-23/sample_list_aggv3.csv"
              }
            }
        }
    },         
 "allOf": [
      { "$ref": "#/$defs/params" }
  ]
}
