{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "my_params": {
            "type": "object",
            "required": ["locus", "shards", "samples"]
            "properties": {
                "locus": {
                  "type": "string",
                  "pattern": "chr[1-22]|X|Y:\d+-\d+",
                  "description": "The locus you want to query"
              },
                "shards": {
                  "type": "string",
                  "description": "The shard list"
              },
                "samples": {
                  "type": "string",
                  "description": "The sample list"
              }
            }
        }
                  
 "allOf": [
      {
          "$ref": "#/defs/my_params"
      }
  ]
}
