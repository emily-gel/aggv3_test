    "type": "object",
    "$defs": {
        "my_params": {
            "type": "object",
            "required": ["locus", "shards", "samples"]
            "properties": {
                "locus": {
                  "type": "string"
              },
                "shards": {
                  "type": "string"
              },
                "samples": {
                  "type": "string"
              }
            }
        }
                  
 "allOf": [
